[Unit]
Description=Self-Healing Reserve Dashboard
After=network.target

[Service]
Type=simple
User=agent
WorkingDirectory=/home/agent/projects/hackathon/self-healing-reserve
Environment=NODE_ENV=production
Environment=BIND_HOST=127.0.0.1
Environment=DASHBOARD_PORT=3002
Environment=PUBLIC_URL=76.13.177.213
