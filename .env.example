# Local Hardhat node (default)
RPC_URL=http://127.0.0.1:8545

# Mock API
MOCK_API_URL=http://127.0.0.1:3001

# Contract (filled after deploy)
CONTRACT_ADDRESS=

# Recovery target address (where USDC gets sent)
RESERVE_ADDRESS=0x0000000000000000000000000000000000000000

# Agentic wallet (optional â€” dry-run mode if not authenticated)
AWAL_DRY_RUN=true

# Agent Configuration
POLL_INTERVAL=2000
DASHBOARD_URL=http://127.0.0.1:3002
REPORTING_ENABLED=true

# Dashboard Configuration
DASHBOARD_PORT=3002
PUBLIC_URL=localhost       # Your VPS public IP or domain
BIND_HOST=127.0.0.1       # Production: 127.0.0.1 | Dev/Demo: 0.0.0.0

# Alert Configuration
ALERTS_ENABLED=true
ALERT_ON_RECOVERY_FAILURE=true
